<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <link rel="stylesheet" type="text/css" href="https://fonts.googleapis.com/css?family=Source+Sans+Pro">
    <title> ShopCenter</title>
    

   @* <link href=' https://fonts.googleapis.com/css2?family=Roboto&display=swap' rel="stylesheet">*@
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <link href="~/css/site.css" rel="stylesheet" />
    <base href="/" />
</head>
<body>
    <div class="container">
        <header>
            <nav class="navbar navbar-expand-lg navbar-light fixed-top bg-secondary"
                aria-label="ShopCenter navigation header">
                <div class="container-xl">
                   <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                         <img src="Images/logo.png" width="151" height="150"
                        alt="BeeShopCenter's' logo" />
                   </a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-target="#navbarSupportedContent"
                aria-controls="navbarCollapse" aria-expanded="false"
                aria-label="Toggle">
                    <span class=" navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarCollapse">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    
                    
                    <vc:category-menu></vc:category-menu>
                            <li class="nav-item">
                                <a asp-controller="Contact" aps-action="Index" class="nav-link" >Contact </a>
                            </li>
                        </ul>


                        <ul class="navbar-nav mb-2 mb-lg-0">
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Pie" asp-action="Search">
                                    
                                    <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                                    class="bi bi-search" viewBox="0 0 16 16">
                                    <path d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001c.03.04.062.078.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1.007 1.007 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0z" />
                                        </svg>
                                </a>
                            </li>
                        </ul>
                        
                        <vc:shopping-cart-summary></vc:shopping-cart-summary>
                        <partial name="_LoginPartial" />
            </div>
          </div>
        </nav>
       </header>
        @RenderBody()
        @RenderSection("Scripts", required: false)
    </div>
    <script src="~/lib/jquery/jquery.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js" integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN" crossorigin="anonymous"></script>
    <script asp-src-include="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.js"></script>
    <script asp-src-include="~/lib/jquery-validate/jquery.validate.js"></script>
</body>
</html>
